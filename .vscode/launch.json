  "version": "0.2.0",
  "configurations": [
    {
      "name": "4d",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}", 
      "cwd": "${workspaceFolder}",
      "args": [
        "${env:HOME}/Downloads"
      ]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "pdf",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/pdfkit/src/run.js",
      "args": [
        "${workspaceFolder}/config.json",
        "${env:HOME}/Downloads/output"
      ]
    }
  ]
}